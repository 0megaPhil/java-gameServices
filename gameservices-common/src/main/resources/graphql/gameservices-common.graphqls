scalar UUID

type Query {

}

interface CommonEntity {
    uuid: UUID
    prompt: String
    withUuid(uuid: UUID): CommonEntity
    withFlavor(flavor: FlavorInput): CommonEntity
}

interface CommonObject {
    name: String
}

interface CommonValue {
    value: Float
}

input Options {
    filters: [Filter]
    sortBy: String
    limit: Int!
}

input Filter {
    byField: String!
    forValue: String!
}

type Flavor implements CommonObject {
    targetId: UUID!
    name: String!
    summary: String!
    objectType: String!
    characteristics: [Characteristic]!
}

input FlavorInput {
    targetId: UUID
    name: String
    summary: String
    objectType: String
    characteristics: [CharacteristicInput]
}

type Dimension implements CommonValue {
    value: Float!
    name: String!
    unitType: String!
}

input DimensionInput {
    value: Float!
    name: String!
    unitType: String!
}

type Characteristic implements CommonValue {
    value: Float!
    name: String!
    description: String
}

input CharacteristicInput {
    value: Float!
    name: String!
    description: String
}
