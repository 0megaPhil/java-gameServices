    type: Attributes!
    name: String
    prompt: String
    flavor: Flavor
    withUuid(uuid: UUID): Attribute
    withFlavor(flavor: FlavorInput): Attribute
}

input AttributeInput {
    uuid: UUID
    type: Attributes!
    name: String
    prompt: String
    flavor: FlavorInput
}

