extend type Query {
    findUser(options: Options): [User]
    getUser(id: String): User
}

extend type Mutation {
    createUser(input: UserInput): User
    updateUser(input: UserInput): User
    flavorUser(id: String): User
    deleteUser(id: String): Boolean
}

type User implements CommonEntity {
    id: String
    firstName: String!
    lastName: String!
    email: String!
    prompt: String
    flavor: Flavor
    created: DateTime
    updated: DateTime
    version: Int
    error: Error
}

input UserInput {
    id: String
    firstName: String!
    lastName: String!
    email: String!
    flavor: FlavorInput
    prompt: String
}